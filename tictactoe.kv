#:kivy 1.0.9
#:import Factory kivy.factory.Factory
<SettingsScreen>:
    FloatLayout:
        Label:
            text:"TICTACTOE"
            bold:True
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size:100
        Slider:
            id:slider
            min: 0
            max: 10
            step: 1
            size_hint_x: 0.5 
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Label:
            size_hint:None,None
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            font_size:100
            text: str(slider.value)
        Button:
            text:"ENTER"
            background_color: 1, 0, 0, 1
            size_hint:None,None
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_press:root.manager.current='menu'
           
<MenuScreen>:

    FloatLayout:
        canvas:
            # Below the score section
            Rectangle:
                pos: 0, self.height - 100
                size: self.width, 10

            # Separating line for score
            Rectangle:
                pos: self.center_x - 5, self.height - 100
                size: 10, 100

        
        Label:
            text:"X: 0"
            size_hint:None,None
            font_size:100
            pos:0.375*root.center_x,root.height-100
        Label:
            text:"O: 0"
            font_size:100
            size_hint:None,None
            pos:3*root.center_x/2,root.height-100
        Button:
            text:"BACK"
            font_size:100
            size_hint:None,None
            pos:root.center_x-150,100
            size:300,100
            on_press:root.manager.current="settings"
            background_color:(255/255, 165/255, 0)
        Button:
            text:"RESET"
            font_size:100
            size_hint:None,None
            pos:root.center_x+400,100
            size:300,100
            on_press:root.clear(self)
            background_color:(1,0,0,1)
        Button:
            text:"RESTART"
            font_size:100
            size_hint:None,None
            size:450,100
            pos:130,100
            on_release:root.clear(self)
            background_color:(0,1,0,1)
        Label:
            id:clk
            text:"5"
            font_size:50
            size_hint:None,None
            size:30,30
            pos:root.width-300,root.height-400
    GridLayout:
        id:grid
        cols:3
        size_hint:None,None
        size:600,600
        pos:root.center_x-300,300
        row_force_default:True
        row_default_height:200
        padding:25
